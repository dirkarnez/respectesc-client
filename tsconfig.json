{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "app/*": ["*"]
    }
  },
  "include": [
    "src"
  ]
}